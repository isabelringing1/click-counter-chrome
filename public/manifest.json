{
  "manifest_version": 3,
  "name": "Click Counter",
  "description": "",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup",
    "default_icon": "click.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "matches": ["http://*/*", "https://*/*"],
      "js": ["/content.js"],
      "run_at": "document_start"
    }  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["http://*/*", "https://*/*"]
}